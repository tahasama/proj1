pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {withEnv(["HOME=${env.WORKSPACE}"]) {
                sh 'pip install -r requirements.txt'
            }
                
            }
        }
        stage('Test') { 
            steps {
                echo 'Testing ta7i7o' 
            }
        }
        stage('Deploy') { 
            steps {
                sh 'echo Deploying ta7i7i' 
            }
        }
    }
}